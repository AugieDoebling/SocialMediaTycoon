<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <managed-bean>
        <managed-bean-name>util</managed-bean-name>
        <managed-bean-class>Util</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>player</managed-bean-name>
        <managed-bean-class>Player</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>login</property-name>
            <value>#{login}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>admin</managed-bean-name>
        <managed-bean-class>Admin</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>login</property-name>
            <value>#{login}</value>
        </managed-property>
    </managed-bean>     
    <managed-bean>
        <managed-bean-name>login</managed-bean-name>
        <managed-bean-class>Login</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean> 
    <managed-bean>
        <managed-bean-name>tweet</managed-bean-name>
        <managed-bean-class>Tweet</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean> 
    <managed-bean>
        <managed-bean-name>reward</managed-bean-name>
        <managed-bean-class>Reward</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean> 
    
    <navigation-rule>
        <from-view-id>
            /index.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>addPlayer</from-outcome>
            <to-view-id>/addPlayer.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>playerLogin</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminLogin</from-outcome>
            <to-view-id>/adminLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>player/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>tutorial</from-outcome>
            <to-view-id>/tutorial.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>about</from-outcome>
            <to-view-id>/about.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>
            /addPlayer.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>addPlayer</from-outcome>
            <to-view-id>/addPlayer.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>playerLogin</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminLogin</from-outcome>
            <to-view-id>/adminLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>tutorial</from-outcome>
            <to-view-id>/tutorial.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>about</from-outcome>
            <to-view-id>/about.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>
            /tutorial.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>addPlayer</from-outcome>
            <to-view-id>/addPlayer.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>playerLogin</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminLogin</from-outcome>
            <to-view-id>/adminLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>tutorial</from-outcome>
            <to-view-id>/tutorial.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>about</from-outcome>
            <to-view-id>/about.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>
            /about.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>addPlayer</from-outcome>
            <to-view-id>/addPlayer.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>playerLogin</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminLogin</from-outcome>
            <to-view-id>/adminLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>tutorial</from-outcome>
            <to-view-id>/tutorial.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>about</from-outcome>
            <to-view-id>/about.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>
            /player/index.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>viewMap</from-outcome>
            <to-view-id>player/selectDestination.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>startNewGame</from-outcome>
            <to-view-id>player/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewLeaderboard</from-outcome>
            <to-view-id>player/viewLeaderboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
     <navigation-rule>
        <from-view-id>
            /player/selectDestination.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>sendTweet</from-outcome>
            <to-view-id>player/sendTweet.xhtml</to-view-id>            
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>viewMap</from-outcome>
            <to-view-id>player/selectDestination.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>startNewGame</from-outcome>
            <to-view-id>player/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewLeaderboard</from-outcome>
            <to-view-id>player/viewLeaderboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
     <navigation-rule>
        <from-view-id>
            /player/sendTweet.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>viewMap</from-outcome>
            <to-view-id>player/selectDestination.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>startNewGame</from-outcome>
            <to-view-id>player/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewLeaderboard</from-outcome>
            <to-view-id>player/viewLeaderboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    
    <navigation-rule>
        <from-view-id>
            /player/viewLeaderboard.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>viewMap</from-outcome>
            <to-view-id>player/selectDestination.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>startNewGame</from-outcome>
            <to-view-id>player/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewLeaderboard</from-outcome>
            <to-view-id>player/viewLeaderboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>
            /adminLogin.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>playerLogin</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/adminLogin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>admin/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>
            /admin/index.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/adminLogin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>         
    
    <application/>
</faces-config>
